<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_status"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horizontal_2x"
    android:paddingRight="@dimen/horizontal_2x"
    android:paddingTop="@dimen/vertical_2x"
    android:paddingBottom="@dimen/vertical">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/horizontal"
        android:paddingRight="@dimen/horizontal"
        android:paddingTop="@dimen/vertical"
        android:paddingBottom="@dimen/vertical">
        <FrameLayout android:id="@+id/container_item_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/item_status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icon_margin"
                android:tint="@color/colorAccent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_live_tv"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/container_item_status_icon">
            <androidx.appcompat.widget.AppCompatTextView android:id="@+id/item_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_medium"
                android:gravity="start"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>